<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Criar estilo para o login-->
    <style name="ContainerComponents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/container_components</item>
    </style>

    <style name="Modal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/modal</item>
    </style>

    <style name="Edit_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="Button" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/colorDefaultBright</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btnOutlinPad" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorDefault</item>
        <item name="android:textColor">@color/colorDefault</item>
        <item name="rippleColor">@color/colorDefaultBackG</item>
    </style>

    <style name="btnOutlinPad.Nao">
        <item name="strokeColor">@color/colorRejeitar</item>
        <item name="android:textColor">@color/colorRejeitar</item>
        <item name="rippleColor">@color/colorRejeitarRipple</item>
    </style>

    <style name="btnOutlinPad.Sim" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorConfirmar</item>
        <item name="android:textColor">@color/colorConfirmar</item>
        <item name="rippleColor">@color/colorConfirmarRipple</item>
    </style>
</resources>