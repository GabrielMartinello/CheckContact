<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialog_titulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:textSize="18sp"
        android:textColor="@color/colorDefault"
        android:textAllCaps="true"
        android:shadowColor="@color/colorPrimaryDark"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        tools:text="TItuloDialog"
        />

    <View android:id="@+id/dialog_separador_titulo"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/shape_view"
        app:layout_constraintTop_toBottomOf="@id/dialog_titulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/dialog_titulo" />

    <TextView
        android:id="@+id/dialog_conteudo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_separador_titulo"
        app:layout_constraintStart_toStartOf="@id/dialog_separador_titulo"
        app:layout_constraintEnd_toEndOf="@id/dialog_separador_titulo"
        android:textColor="@color/colorDark"
        android:textSize="15sp"
        android:textFontWeight="700"
        tools:text="Informação desejada sobre o que necessita com o texto da rotina/processo
Pedido desejado referênte a rotina."
        tools:targetApi="p" />

    <TextView
        android:id="@+id/dialog_enfase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dialog_conteudo"
        app:layout_constraintStart_toStartOf="@id/dialog_conteudo"
        app:layout_constraintEnd_toEndOf="@id/dialog_conteudo"
        android:textColor="@color/colorDark"
        android:textSize="15sp"
        android:textFontWeight="700"
        android:textStyle="bold"
        tools:text="Informação desejada sobre o que necessita com o texto da rotina/processo
Pedido desejado referênte a rotina."
        tools:targetApi="p"
        android:visibility="gone"/>

    <View android:id="@+id/dialog_separador_decisao"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_view"
        app:layout_constraintTop_toBottomOf="@id/dialog_enfase"
        app:layout_constraintEnd_toEndOf="@id/dialog_separador_titulo"
        app:layout_constraintStart_toStartOf="@id/dialog_separador_titulo" />

    <Button
        android:id="@+id/dialog_btn_neutral"
        style="@style/btnOutlinPad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/dialog_separador_decisao"
        app:layout_constraintEnd_toEndOf="@id/dialog_separador_decisao"
        app:layout_constraintTop_toBottomOf="@id/dialog_separador_decisao"
        app:layout_constraintHorizontal_bias="1"
        android:textAllCaps="true"
        android:text="ok"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/dialog_btn_nao"
        style="@style/btnOutlinPad.Nao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/dialog_btn_sim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_separador_decisao"
        app:layout_constraintHorizontal_bias="1.0"
        android:textAllCaps="true"
        android:text="Não"
        />

    <Button
        android:id="@+id/dialog_btn_sim"
        style="@style/btnOutlinPad.Sim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="8dp"
        android:textAllCaps="true"
        android:text="Sim"
        app:layout_constraintEnd_toEndOf="@+id/dialog_separador_decisao"
        app:layout_constraintTop_toBottomOf="@id/dialog_separador_decisao" />


</androidx.constraintlayout.widget.ConstraintLayout>